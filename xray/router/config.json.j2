{
    "log": {
        "loglevel": "error",
        "access": "/var/log/xray/access.log",
        "error": "/var/log/xray/error.log"
    },
    "inbounds": [
        {
            "port": 443,
            "protocol": "vless",
            "settings": {
                "decryption": "none",
                "clients": [
                    {
                        "flow": "xtls-rprx-vision",
                        "id": "{{ xray_router.user.uuid }}"
                    }
                ]
            },
            "streamSettings": {
                "network": "raw",
                "security": "reality",
                "realitySettings": {
                    "dest": "www.googletagmanager.com:443",
                    "privateKey": "{{ xray_router.reality.private_key }}",
                    "serverNames": [
                        "www.googletagmanager.com"
                    ],
                    "shortIds": [
                        "{{ xray_router.user.short_id }}"
                    ]
                }
            }
        }
    ],
    "routing": {
        "domainStrategy": "IPIfNonMatch",
        "rules": [
            {
                "type": "field",
                "protocol": ["bittorrent"],
                "outboundTag": "block"
            },
            {
                "type": "field",
                "domain": [
                    "domain:anilibria.tv",
                    "domain:animori.org"
                ],
                "outboundTag": "proxy-freedom"
            },
            {
                "type": "field",
                "domain": ["domain:ru"],
                "outboundTag": "direct"
            },
            {
                "type": "field",
                "ip": ["geoip:ru", "geoip:private"],
                "outboundTag": "direct"
            },
            {
                "type": "field",
                "network": "tcp,udp",
                "outboundTag": "proxy-freedom"
            }
        ]
    },
    "outbounds": [
        {
            "tag": "block",
            "protocol": "blackhole"
        },
        {
            "tag": "direct",
            "protocol": "freedom"
        },
        {
            "tag": "proxy-freedom",
            "protocol": "vless",
            "settings": {
                "vnext": [
                    {
                        "address": "{{ xray_freedom_host }}",
                        "port": 443,
                        "users": [
                            {
                                "id": "{{ xray_freedom.user.uuid }}",
                                "flow": "xtls-rprx-vision",
                                "encryption": "none"
                            }
                        ]
                    }
                ]
            },
            "streamSettings": {
                "network": "raw",
                "security": "reality",
                "realitySettings": {
                    "serverName": "www.googletagmanager.com",
                    "fingerprint": "chrome",
                    "shortId": "{{ xray_freedom.user.short_id }}",
                    "publicKey": "{{ xray_freedom.reality.public_key }}"
                }
            }
        }
    ]
}
